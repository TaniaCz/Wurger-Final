# Configuración de ejemplo para application.properties
# Copia este archivo como 'application.properties' y configura tus credenciales

# --- CONEXIÓN A BASE DE DATOS ---
spring.datasource.url=jdbc:mysql://localhost:3306/Wurger?useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true

# --- CREDENCIALES (CAMBIAR POR LAS TUYAS) ---
spring.datasource.username=root
spring.datasource.password=TU_CONTRASEÑA_AQUI

# Driver de MySQL
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# --- CONFIGURACIÓN DE HIBERNATE (JPA) ---
# 'update': Actualiza la estructura si agregas campos nuevos
# 'validate': Solo revisa que la BD coincida con Java (producción)
# 'create-drop': Borra y recrea la BD cada vez (solo desarrollo)
spring.jpa.hibernate.ddl-auto=update

# Dialecto para MySQL 8+
spring.jpa.database-platform=org.hibernate.dialect.MySQLDialect

# --- VISUALIZACIÓN (Opcional) ---
# Muestra las consultas SQL en la consola
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.format_sql=true

# --- CONFIGURACIÓN DEL SERVIDOR ---
server.port=8080

# --- SEGURIDAD (Opcional) ---
